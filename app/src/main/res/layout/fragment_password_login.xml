<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/signin_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="간편 비밀번호"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:flow_horizontalAlign="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="비밀번호를 입력해주세요."
        app:flow_horizontalAlign="center"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/signin_text"
        app:layout_constraintStart_toStartOf="@+id/signin_text"
        app:layout_constraintTop_toBottomOf="@+id/signin_text" />

    <!-- 비밀번호를 표시하는 텍스트 뷰 -->
    <!-- 각 자리수를 표시할 TextView -->
    <TextView
        android:id="@+id/char_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_marginEnd="20dp"
        android:padding="8dp"
        android:textColor="@color/black"
        android:text="_"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/find_password_button"
        app:layout_constraintEnd_toStartOf="@+id/char_2"
        app:layout_constraintTop_toBottomOf="@+id/description_text" />

    <TextView
        android:id="@+id/char_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:padding="8dp"
        android:textColor="@color/black"
        android:text="_"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/find_password_button"
        app:layout_constraintEnd_toStartOf="@+id/char_3"
        app:layout_constraintTop_toBottomOf="@+id/description_text" />

    <TextView
        android:id="@+id/char_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_marginEnd="5dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="_"
        android:textColor="@color/black"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/find_password_button"
        app:layout_constraintEnd_toStartOf="@+id/char_center"
        app:layout_constraintTop_toBottomOf="@+id/description_text" />

    <TextView
        android:id="@+id/char_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:textColor="@color/black"
        android:text=""
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/find_password_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description_text" />

    <TextView
        android:id="@+id/char_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_marginStart="5dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="_"
        android:textColor="@color/black"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/find_password_button"
        app:layout_constraintStart_toEndOf="@+id/char_center"
        app:layout_constraintTop_toBottomOf="@+id/description_text" />

    <TextView
        android:id="@+id/char_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_marginStart="20dp"
        android:gravity="center"
        android:padding="8dp"
        android:textColor="@color/black"
        android:text="_"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/find_password_button"
        app:layout_constraintStart_toEndOf="@+id/char_4"
        app:layout_constraintTop_toBottomOf="@+id/description_text" />

    <TextView
        android:id="@+id/char_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_marginStart="20dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="_"
        android:textColor="@color/black"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/find_password_button"
        app:layout_constraintStart_toEndOf="@+id/char_5"
        app:layout_constraintTop_toBottomOf="@+id/description_text" />

    <Button
        android:id="@+id/find_password_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="비밀번호를 잊으셨나요?"
        android:background="@android:color/transparent"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/button_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_1"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:text="1"
        android:textAlignment="center"
        android:textSize="20sp"
        android:background="#0046FF"
        app:layout_constraintBottom_toTopOf="@+id/button_4"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_2"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:text="2"
        android:textAlignment="center"
        android:textSize="20sp"
        android:background="#0046FF"
        app:layout_constraintBottom_toTopOf="@+id/button_5"
        app:layout_constraintEnd_toStartOf="@+id/button_3"
        app:layout_constraintStart_toEndOf="@+id/button_1" />

    <Button
        android:id="@+id/button_3"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:text="3"
        android:textAlignment="center"
        android:textSize="20sp"
        android:background="#0046FF"
        app:layout_constraintBottom_toTopOf="@+id/button_6"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button_4"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:text="4"
        android:textAlignment="center"
        android:textSize="20sp"
        android:background="#0046FF"
        app:layout_constraintBottom_toTopOf="@+id/button_7"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_5"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:text="5"
        android:textAlignment="center"
        android:textSize="20sp"
        android:background="#0046FF"
        app:layout_constraintBottom_toTopOf="@+id/button_8"
        app:layout_constraintEnd_toStartOf="@+id/button_6"
        app:layout_constraintStart_toEndOf="@+id/button_4" />

    <Button
        android:id="@+id/button_6"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:text="6"
        android:textAlignment="center"
        android:textSize="20sp"
        android:background="#0046FF"
        app:layout_constraintBottom_toTopOf="@+id/button_9"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button_7"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:text="7"
        android:textAlignment="center"
        android:textSize="20sp"
        android:background="#0046FF"
        app:layout_constraintBottom_toTopOf="@+id/button_00"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_8"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:text="8"
        android:textAlignment="center"
        android:textSize="20sp"
        android:background="#0046FF"
        app:layout_constraintBottom_toTopOf="@+id/button_0"
        app:layout_constraintEnd_toStartOf="@+id/button_9"
        app:layout_constraintStart_toEndOf="@+id/button_7" />

    <Button
        android:id="@+id/button_9"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:text="9"
        android:textAlignment="center"
        android:textSize="20sp"
        android:background="#0046FF"
        app:layout_constraintBottom_toTopOf="@+id/button_back"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button_00"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:text="00"
        android:textAlignment="center"
        android:textSize="20sp"
        android:background="#0046FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_0"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="20sp"
        android:background="#0046FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_back"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toEndOf="@+id/button_00" />

    <Button
        android:id="@+id/button_back"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:text="back"
        android:textAlignment="center"
        android:textSize="20sp"
        android:background="#0046FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>