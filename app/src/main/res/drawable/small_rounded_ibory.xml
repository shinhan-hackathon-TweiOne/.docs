<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 그림자 레이어 -->
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="30dp"/>

            <padding
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"
                android:bottom="4dp"/> <!-- 그림자가 아래쪽으로만 표시되도록 패딩 조정 -->
            <solid android:color="#55000000"/> <!-- 그림자 색상 -->
        </shape>
    </item>

    <!-- 배경 레이어 (하얀색, 둥근 모서리) -->
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="#c9d8ff"/>
            <corners android:radius="30dp"/> <!-- 둥근 모서리 설정 -->
        </shape>
    </item>
</layer-list>
