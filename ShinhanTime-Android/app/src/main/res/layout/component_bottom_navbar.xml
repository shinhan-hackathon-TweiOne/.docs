<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="5"
        android:orientation="horizontal"
        android:rowCount="1"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent">

        <GridLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:columnCount="1"
            android:rowCount="2"
            android:background="@drawable/small_rounded_white_button"
            android:layout_row="0"
            android:layout_column="0"
            app:layout_constraintEnd_toStartOf="@+id/button_mypage"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_columnWeight="1">

            <ImageButton
                android:id="@+id/button_menu"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_row="0"
                android:scaleType="centerInside"
                android:src="@drawable/menu"
                android:background="@drawable/small_rounded_white_button"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:gravity="center"
                android:text="메뉴"
                android:textColor="#7A9DFA" />
        </GridLayout>

        <GridLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:columnCount="1"
            android:rowCount="2"
            android:background="@drawable/small_rounded_white_button"
            app:layout_constraintEnd_toStartOf="@+id/button_home"
            app:layout_constraintStart_toEndOf="@+id/button_menu"
            android:layout_columnWeight="1">

            <ImageButton
                android:id="@+id/button_mypage"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_row="0"
                android:scaleType="centerInside"
                android:src="@drawable/mypage"
                android:background="@drawable/small_rounded_white_button"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:gravity="center"
                android:text="마이페이지"
                android:textColor="#7A9DFA" />
        </GridLayout>

        <GridLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:columnCount="1"
            android:rowCount="2"
            android:background="@drawable/small_rounded_white_button"
            app:layout_constraintEnd_toStartOf="@+id/button_fleamarket"
            app:layout_constraintStart_toEndOf="@+id/button_mypage"
            android:layout_columnWeight="1">

            <ImageButton
                android:id="@+id/button_home"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_row="0"
                android:scaleType="centerInside"
                android:src="@drawable/home"
                android:background="@drawable/small_rounded_white_button"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:gravity="center"
                android:text="홈"
                android:textColor="#7A9DFA" />
        </GridLayout>

        <GridLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:columnCount="1"
            android:rowCount="2"
            android:background="@drawable/small_rounded_white_button"
            app:layout_constraintEnd_toStartOf="@+id/button_benefit"
            app:layout_constraintStart_toEndOf="@+id/button_home"
            android:layout_columnWeight="1">

            <ImageButton
                android:id="@+id/button_fleamarket"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_row="0"
                android:scaleType="centerInside"
                android:src="@drawable/fleamarket"
                android:background="@drawable/small_rounded_white_button"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:gravity="center"
                android:text="플리마켓"
                android:textColor="#7A9DFA" />
        </GridLayout>

        <GridLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:columnCount="1"
            android:rowCount="2"
            android:background="@drawable/small_rounded_white_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_fleamarket"
            android:layout_columnWeight="1">

            <ImageButton
                android:id="@+id/button_benefit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_row="0"
                android:scaleType="centerInside"
                android:src="@drawable/benefit"
                android:background="@drawable/small_rounded_white_button"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:gravity="center"
                android:text="혜택"
                android:textColor="#7A9DFA" />
        </GridLayout>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
